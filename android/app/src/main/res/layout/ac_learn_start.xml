<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="match_parent">

    <com.careermate.CORE_LIBS.VIEWS.DefaultFontTextView
        android:id="@+id/tvLearnText"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/text_height_default"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="3dp"
        android:text="Learn"
        android:textSize="@dimen/text_size_big" />

    <LinearLayout
        android:id="@+id/linInfomationCourse"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/tvLearnText"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.careermate.CORE_LIBS.VIEWS.DefaultFontTextView
                android:id="@+id/tvActiveCourseText"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/text_height_default"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:padding="3dp"
                android:text="Active Course"
                android:textSize="@dimen/text_size_default" />

            <com.careermate.CORE_LIBS.VIEWS.DefaultFontTextView
                android:id="@+id/tvNextLessonText"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/text_height_default"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:padding="3dp"
                android:text="Next Lesson"
                android:textSize="@dimen/text_size_default" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.careermate.CORE_LIBS.VIEWS.DefaultFontTextView
                android:id="@+id/tvActiveCourse"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/text_height_default"
                android:layout_centerHorizontal="true"
                android:gravity="left"
                android:padding="3dp"
                android:text="English for beginer"
                android:textSize="@dimen/text_size_default" />

            <com.careermate.CORE_LIBS.VIEWS.DefaultFontTextView
                android:id="@+id/tvNextLesson"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/text_height_default"
                android:layout_centerHorizontal="true"
                android:gravity="left"
                android:padding="3dp"
                android:text="Lesson 8"
                android:textSize="@dimen/text_size_default" />
        </LinearLayout>


    </LinearLayout>

    <android.widget.ProgressBar
        android:id="@+id/pbCourseComplete"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/linInfomationCourse"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:progress="10" />

    <RelativeLayout
        android:id="@+id/relBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pbCourseComplete">

        <com.careermate.CORE_LIBS.VIEWS.DefaultFontButton
            android:id="@+id/tvFindCourse"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:background="@drawable/bg_button"
            android:gravity="center"
            android:padding="5dp"
            android:text="Start now.."
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_default" />

    </RelativeLayout>


</RelativeLayout>